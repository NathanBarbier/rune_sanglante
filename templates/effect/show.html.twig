{% extends 'base.html.twig' %}

{% block title %}Effect{% endblock %}

{% block body %}
    <h1>Effect</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ effect.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ effect.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ effect.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <img src="{{ asset('/uploads/image/' ~ effect.image) }}" alt="">
            </tr>
            <tr>
                <th>Buff</th>
                <td>{{ effect.buff ? 'Buff' : 'Debuff' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_effect_index') }}">back to list</a>

    <a href="{{ path('app_effect_edit', {'id': effect.id}) }}">edit</a>

    {{ include('effect/_delete_form.html.twig') }}
{% endblock %}
